<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <EditText
        android:id="@+id/edittext1"
        android:layout_width="250px"
        android:layout_height="wrap_content"
        android:textSize="1sp" >
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <!-- Fragmento estático para el listado de localidades -->

        <fragment
            android:id="@+id/contenedorFrag_ciudadesLista"
            android:name="com.jmfierro.utad.meteo.MeteoListaLocalidadesFragmento"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <!-- Fragmento dinámico con el contenido del elemento pulsado del listado -->

        <FrameLayout
            android:id="@+id/contenedorFrag_LocalidadDetalle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3" />
    </LinearLayout>

</FrameLayout>